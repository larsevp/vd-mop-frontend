      // If filter includes "Luft" but we're looking for "StÃ¸y", return empty
      if (url.includes('emne') && url.includes('Luft')) {
        console.log('âŒ Filter mismatch - returning empty result');
        return Promise.resolve({ data: { items: [], total: 0 } });
