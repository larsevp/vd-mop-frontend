    // Now simulate what happens when entity emne changes but filter stays the same
    // This is the likely bug scenario!
    console.log('ğŸš¨ Simulating emne change with stale filter...');
    
    // Entity now has "Luft" emne, but filter still searches for "StÃ¸y"
    queryClient.invalidateQueries({ queryKey: ['krav'] });

    await waitFor(() => {
      expect(result.current.isLoading).toBe(false);
    });

    console.log('ğŸ” Result after invalidation with mismatched filter:');
    console.log('ğŸ“Š Total entities found:', result.current.data?.total);
    
    if (result.current.data?.total === 0) {
      console.log('ğŸ¯ BUG IDENTIFIED! Entity disappeared due to filter mismatch');
      console.log('ğŸ’¡ Root cause: Entity emne changed but active filter still looks for old emne');
    }

    // This demonstrates the bug - entity disappears when filter doesn't match new emne
    expect(result.current.data?.total).toBe(0);
  });

  it('should test optimistic update behavior', async () => {
    console.log('ğŸ§ª Testing optimistic update emne change...');

    const initialData = {
