    console.log('ğŸ“Š Entity emne after optimistic update:', 
      optimisticData?.items?.[0]?.krav?.[0]?.emne?.tittel);

    expect(optimisticData?.items?.[0]?.emne?.tittel).toBe('Luft');
  });

